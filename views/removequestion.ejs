<%- include("partials/header.ejs") %> 

    <div class="main">
        <div class="topic-title">
        <h2 style="color: black"><%= _.capitalize(topicName.name) %></h2>
        </div>
        <form action="/deletequestion" method="post" style="width: 65%; margin:10px auto; background-color: transparent;">
            <input type="text" style="visibility: hidden;" name="tname" value="<%= topicName.name %>"></input>
            <% topicName.content.forEach(function(item){ %>
                <div class="rem-ques">
                    <div style="width: 10%"><%= i %><% i++ %></div>
                    <div style="width: 70%;"><%= item.qname %></div>
                    <div style="width: 20%; float: right;">
                    <button class="btn" style="width: 100px; color: white(129, 0, 0); position: relative; right:0" name="qname" value="<%= item.qname%>">Remove   
                    </button></div>
                    <br>
                </div>
            <% }) %>
        </form>
    </div>

<%- include("partials/footer.ejs") %>